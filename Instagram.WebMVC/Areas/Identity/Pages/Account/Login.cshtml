@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<center>
    <div class="container bg-white col-lg-4 col-md-6 col-sm-8" style="border:.5px solid lightgrey;">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group" style="">
                    <img src="~/assets/Logo.png" alt="Logo" />
                    <input asp-for="Input.Email" class="form-control bg-light" placeholder="Username or Email" style="width:14rem;font-size:10pt;" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control bg-light" placeholder="Password" style="width:14rem;font-size:10pt;" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="width: 14rem; font-size: 12pt; background-color: #30873E;">Log in</button>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="font-size: 10pt; color: #30873E;">Forgot password?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="font-size: 10pt; color: #30873E;">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <br />
    <div class="container bg-white col-md-4" style="border:.5px solid lightgrey;">
        <p style="margin:5pt;">Don't have an account? <a asp-page="./Register" style="text-decoration-style: double; color: #30873E;">Sign up</a></p>
    </div>
</center>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
